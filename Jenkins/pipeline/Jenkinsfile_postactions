pipeline {
    agent any
    stages {
        stage('CHECKOUT') {
            steps {
                echo 'STEGE: CHECKOUT'
            }
        }

        stage('BUILD') {
            steps {
                echo 'STEGE: BUILD'
            }
        }

        stage('DEPLOY') {
            steps {
                echo 'STEGE: DEPLOY'
            }
        }
    }
    post { 
        always { 
            echo 'I will always say Hello again!'
        }
    }
}
