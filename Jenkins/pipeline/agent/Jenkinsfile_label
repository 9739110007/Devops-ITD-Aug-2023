pipeline {
    agent { label 'slave1' }
    
    stages {
        stage('BUILD') {
            steps {
                sh '''
                    #!/bin/bash
                    pwd
                    exit 1
                    ls -lrt
                    sleep 5
                '''
            }
        }   
        
        stage('TEST-WINDOWS') {
            steps {
                sh """
                    #!/bin/bash
                    pwd
                    ls -lrt
                    sleep 5
                """
            }
        }   

        stage('TEST-LINUX') {
            steps {
                sh 'sleep 5'
            }
        }
        
        stage('DEPLOY') {
            steps {
                sh 'sleep 5'
            }
        }   
    }
}
